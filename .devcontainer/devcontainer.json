{
    "name": "Rust Devcontainer",
    "image": "mcr.microsoft.com/vscode/devcontainers/rust:latest",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "rust-lang.rust",
                "matklad.rust-analyzer"
            ]
            
        }
    },
    "postCreateCommand": "cargo check && cargo install --path .",
    "remoteUser": "vscode"
}